{% extends ':note:layout.html.twig' %}

{% block content %}
    {% if notes %}
        <div class="columns">
            {% for note in notes %}
                <div class="column is-one-quarter">
                    <div class="card">
                        <div class="card-content">
                            <div class="content">
                                {% if note.title %}
                                    <h4 class="title is-4">
                                        {{ note.title }}
                                    </h4>
                                {% endif %}
                                {{ note.content | nl2br }}
                            </div>
                        </div>
                    </div>
                </div>
                {% if (loop.index) % 4 == 0 %}
                    </div>
                    <div class="columns">
                {% endif %}
            {% endfor %}
        </div>
    {% else %}
        <div class="notification has-text-centered">
            {{ 'note.you_have_no_removed_notes' | trans }}
        </div>
    {% endif %}
{% endblock %}
