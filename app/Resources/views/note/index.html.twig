{% extends ':note:layout.html.twig' %}

{% block content %}
    {% if notes %}
        <div class="columns">
            {% for note in notes %}
                <a href="{{ path('note_edit', {id: note.id}) }}"
                   class="column is-one-quarter note">
                    <div class="card">
                        <div class="card-content">
                            <div class="content">
                                {% if note.title %}
                                    <h5 class="title is-5">
                                        {{ note.title }}
                                    </h5>
                                {% endif %}
                                {{ note.content | nl2br }}
                            </div>
                        </div>
                    </div>
                </a>
                {% if (loop.index) % 4 == 0 %}
                    </div>
                    <div class="columns">
                {% endif %}
            {% endfor %}
        </div>
    {% else %}
        <div class="notification has-text-centered">
            You have no notes. Please <a href="{{ path('note_new') }}">create one</a>.
        </div>
    {% endif %}
{% endblock %}
