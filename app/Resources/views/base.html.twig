<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css"
                  href="{{ asset('vendor/bulma/css/bulma.css') }}">
            <link rel="stylesheet" type="text/css"
                  href="{{ asset('vendor/font-awesome/css/font-awesome.css') }}">
            <link rel="stylesheet" type="text/css"
                  href="{{ asset('vendor/magnific-popup/dist/magnific-popup.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/rolling.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% include "::navigation.html.twig" %}

        {% block body %}{% endblock %}

        {% block javascripts %}
            {% if app.environment in ['dev', 'test'] %}
                <script src="{{ asset('vendor/jquery/dist/jquery.js') }}"></script>
                <script src="{{ asset('vendor/autosize/dist/autosize.js') }}"></script>
                <script src="{{ asset('vendor/magnific-popup/dist/jquery.magnific-popup.js') }}"></script>
                <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
                <script src="{{ asset('js/routes.js') }}"></script>
            {% else %}
                <script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
                <script src="{{ asset('vendor/autosize/dist/autosize.min.js') }}"></script>
                <script src="{{ asset('vendor/magnific-popup/dist/jquery.magnific-popup.min.js') }}"></script>
            {% endif %}
        {% endblock %}
    </body>
</html>
