{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    <div class="columns">
        <div class="column is-half">

        </div>
        <div class="column is-half">
            <h1 class="title">Sign In</h1>
            <hr>

            {% if error %}
                <div>
                    {{ error.messageKey | trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                {% endif %}

                <label class="label" for="username">
                    {{ 'security.login.username'|trans }}
                </label>
                <p class="control">
                    <input class="input" type="text" id="username" name="_username"
                           value="{{ last_username }}" required="required"/>
                </p>

                <label class="label" for="password">
                    {{ 'security.login.password'|trans }}
                </label>
                <p class="control">
                    <input class="input" type="password" id="password"
                           name="_password" required="required"/>
                </p>

                <p class="control">
                    <label class="checkbox" for="remember_me">
                        <input class="checkbox" type="checkbox" id="remember_me"
                               name="_remember_me" value="on"/>
                        {{ 'security.login.remember_me' | trans }}
                    </label>
                </p>

                <p class="control">
                    <input class="button is-primary" type="submit" id="_submit"
                           name="_submit"
                           value="{{ 'security.login.submit' | trans }}"/>
                </p>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
